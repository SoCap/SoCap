<div class="box box-75 altbox"> 
	<div class="boxin"> 
		<div class="header"> 
			<h3>New Conference</h3> 
		</div>
    <%= form_for @conference, :html => { :multipart => true, :class => "fields" }, :method => "post" do |f| %>
      <fieldset>
    		<legend><strong>Conference Details</strong></legend>
    		<%if flash[:success]%>
    		  <div class="msg msg-ok"> 
					  <p><%= flash[:success].html_safe %></p> 
				  </div>
				<%end%>
				<%if flash[:error]%>
    		  <div class="msg msg-error"> 
					  <p><%= flash[:error].html_safe %></p> 
				  </div>
				<%end%>
        <%= render 'form', :f => f %>  
        <div class="sep">
          <%= f.submit "Continue", :class => "button altbutton" %> 
        </div>
      </fieldset>
    <%end%>
  </div>
</div>