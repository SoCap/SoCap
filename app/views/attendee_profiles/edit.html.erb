<div class="box box-100 altbox"><!-- .altbox for alternative box's color -->
	<div class="boxin">
		<div class="header">
			<h3><%= "Edit Profile"%></h3>
			<ul><!-- Tabs in the box's header -->
			  <li><%= link_to "profile", attendee_root_path %></li>
			  <%if current_attendee && current_attendee.id == @attendee_profile.attendee.id %>
		      <li><%= link_to "edit profile", edit_attendee_profile_path(@attendee_profile.id), :class => "active" %></li>
			  <%end%>
			</ul>
		</div>
		<div class="content">
      
      <%= form_for @attendee_profile, :url => '/attendee/profile/update', :html => { :multipart => true, :class => 'fields' } do |f| %>
        <fieldset>
      		<legend><strong>Personal Information</strong></legend>
      		<%if flash[:success]%>
      		  <div class="msg msg-ok"> 
  					  <p><%= flash[:success].html_safe %></p> 
  				  </div>
  				<%end%>
  				<%if flash[:error]%>
      		  <div class="msg msg-error"> 
  					  <p><%= flash[:error].html_safe %></p> 
  				  </div>
  				<%end%>
          <%= render 'edit_form', :p => f %>  
          <div class="sep">
            <%= f.submit "Update", :class => "button altbutton" %> 
          </div>
        </fieldset>
      <%end%>  
    
		</div>
	</div>
</div>